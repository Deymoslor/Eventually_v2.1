<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp">

    <TextView
        android:id="@+id/titulo_detalle_mostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detalle_grupo"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center">
    </TextView>
    <ImageView
        android:id="@+id/imagen_detalle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/logoxd_foreground"
        android:layout_gravity="center"
        android:paddingTop="10dp">
    </ImageView>

    <TextView
        android:id="@+id/titulo_detalle_mostrar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre_grupo"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/nombre_detalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle Grupo"
        android:textSize="30sp"
        android:gravity="center">
    </TextView>

</LinearLayout>