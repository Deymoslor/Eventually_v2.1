<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoxd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:text="@string/pesonaliza_tu_cuenta"
            android:textColor="@color/colorAzul_TQM"
            android:textSize="30sp"
            android:paddingTop="55dp">
        </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:padding="50dp"
        android:src="@drawable/perfil">

    </ImageView>

    <Button
        android:id="@+id/btn_personalizar"
        android:layout_width="wrap_content"
        android:layout_margin="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:backgroundTint="@color/colorBotones"
        android:layout_gravity="center"
        android:text="@string/personaliza_tus_datos">

    </Button>

</LinearLayout>